{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt",
  "builds": [
    { 
      "src": "app.py", 
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    { 
      "src": "/chat", 
      "methods": ["POST"],
      "dest": "app.py" 
    },
    { 
      "src": "/(.*)", 
      "dest": "app.py" 
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "PYTHONPATH": "."
  }
}
